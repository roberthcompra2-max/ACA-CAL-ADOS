    <script>
        // CONFIGURAÃ‡ÃƒO FIREBASE
        const firebaseConfig = {
            apiKey: "AIzaSyCTqfAyrNO84Pe-jEuivYOEplTXud2j3Wk",
            authDomain: "estoqueaca.firebaseapp.com",
            projectId: "estoqueaca",
            storageBucket: "estoqueaca.firebasestorage.app",
            messagingSenderId: "830413492561",
            appId: "1:830413492561:web:107953d7dc876b5ed3c370"
        };

        // Iniciar Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();
        let orcamento = [];

        // 1. ESCUTAR MUDANÃ‡AS EM TEMPO REAL
        db.collection("estoque").doc("atual").onSnapshot((doc) => {
            const statusText = document.getElementById('statusText');
            const statusDot = document.getElementById('statusDot');

            if (doc.exists) {
                renderTable(doc.data().conteudo.split('\n'));
                statusText.innerText = "ONLINE: " + doc.data().dataHora;
                statusDot.classList.replace('bg-yellow-400', 'bg-emerald-400');
                statusDot.classList.remove('animate-pulse');
            } else {
                statusText.innerText = "BANCO VAZIO - FAÃ‡A UPLOAD";
                statusDot.classList.replace('bg-yellow-400', 'bg-red-500');
            }
        }, (error) => {
            console.error("Erro no Firebase:", error);
            document.getElementById('statusText').innerText = "ERRO DE CONEXÃƒO";
        });

        // 2. UPLOAD PARA A NUVEM
        async function uploadParaNuvem() {
            const fileInput = document.getElementById('fileInput');
            const btn = document.getElementById('btnUpload');
            
            if (!fileInput.files[0]) return alert("Selecione o arquivo aca.txt primeiro!");

            btn.innerText = "ENVIANDO...";
            btn.disabled = true;

            const reader = new FileReader();
            reader.onload = async (e) => {
                try {
                    await db.collection("estoque").doc("atual").set({
                        conteudo: e.target.result,
                        dataHora: new Date().toLocaleString('pt-br')
                    });
                    alert("Sucesso! Estoque atualizado para todos os usuÃ¡rios.");
                } catch (error) {
                    console.error(error);
                    alert("Erro ao enviar! Verifique se as regras de seguranÃ§a no Firebase foram publicadas.");
                } finally {
                    btn.innerText = "SUBIR ESTOQUE NOVO";
                    btn.disabled = false;
                }
            };
            reader.readAsText(fileInput.files[0]);
        }

        // 3. RENDERIZAÃ‡ÃƒO DA TABELA
        function renderTable(lines) {
            const tableBody = document.getElementById('tableBody');
            tableBody.innerHTML = '';
            let ultimoNCE = "";

            lines.forEach(line => {
                const cleanLine = line.replace('@', '').replace('\r', '');
                if (cleanLine.includes('====') || cleanLine.includes('Relacao') || cleanLine.trim().length < 40) return;

                let nce = cleanLine.substring(6, 13).trim();
                let tam = cleanLine.substring(13, 18).trim();
                let cor = cleanLine.substring(18, 39).trim();
                let desc = cleanLine.substring(39, 86).trim(); 
                let precoStr = cleanLine.substring(107, 118).trim();

                if (nce && !isNaN(nce)) ultimoNCE = nce;

                if (desc.length > 5 && precoStr !== "") {
                    const tr = document.createElement('tr');
                    tr.className = "hover:bg-indigo-50/50 transition-colors group";
                    tr.setAttribute('data-tam', tam.toLowerCase());
                    tr.setAttribute('data-nce', ultimoNCE.toLowerCase());
                    tr.setAttribute('data-cor', cor.toLowerCase());
                    
                    tr.innerHTML = `
                        <td class="px-6 py-4 font-mono font-bold text-indigo-700 text-sm">${ultimoNCE}</td>
                        <td class="px-6 py-4 text-slate-600 font-black">${tam}</td>
                        <td class="px-6 py-4">
                            <div class="font-black text-slate-800 uppercase text-xs leading-tight">${desc}</div>
                            <div class="text-[10px] text-slate-400 italic font-bold uppercase">${cor}</div>
                        </td>
                        <td class="px-6 py-4 text-right font-black text-slate-900 text-sm">R$ ${precoStr}</td>
                        <td class="px-6 py-4 text-center">
                            <button onclick="addOrcamento('${ultimoNCE}', '${desc.replace(/'/g, "")}', '${tam}', '${precoStr}')" 
                                class="bg-indigo-600 text-white w-10 h-10 rounded-xl font-bold shadow-md group-hover:scale-110 active:scale-90 transition-all text-xl">+</button>
                        </td>
                    `;
                    tableBody.appendChild(tr);
                }
            });
        }

        // 4. PESQUISA
        document.getElementById('searchInput').addEventListener('input', function() {
            const input = this.value.toLowerCase().trim();
            const rows = document.querySelectorAll('#tableBody tr');
            rows.forEach(row => {
                let show = false;
                if (input.includes(':')) {
                    const [col, val] = input.split(':');
                    const attr = row.getAttribute(`data-${col.trim()}`);
                    if (attr && attr.includes(val.trim())) show = true;
                } else {
                    show = row.textContent.toLowerCase().includes(input);
                }
                row.style.display = show ? "" : "none";
            });
        });

        // 5. FUNÃ‡Ã•ES DE ORÃ‡AMENTO
        function addOrcamento(nce, desc, tam, preco) {
            const idx = orcamento.findIndex(i => i.nce === nce && i.tam === tam && i.desc === desc);
            if (idx > -1) orcamento[idx].qtd++;
            else orcamento.push({ nce, desc, tam, preco, qtd: 1 });
            atualizarCarrinho();
        }

        function alterarQtd(index, delta) {
            orcamento[index].qtd += delta;
            if (orcamento[index].qtd <= 0) orcamento.splice(index, 1);
            atualizarCarrinho();
        }

        function atualizarCarrinho() {
            document.getElementById('cartCount').textContent = orcamento.reduce((acc, i) => acc + i.qtd, 0);
            const container = document.getElementById('orcamentoItens');
            container.innerHTML = '';
            let totalGeral = 0;

            orcamento.forEach((item, index) => {
                let valorUnitario = parseFloat(item.preco.replace(/\./g, '').replace(',', '.'));
                if (item.preco.includes('.')) valorUnitario = valorUnitario / 100;
                const subtotal = valorUnitario * item.qtd;
                totalGeral += subtotal;

                container.innerHTML += `
                    <div class="bg-slate-50 p-4 rounded-2xl border border-slate-200">
                        <div class="flex justify-between items-start mb-3">
                            <div>
                                <p class="text-[9px] text-indigo-600 font-black">#${item.nce}</p>
                                <p class="font-black text-slate-800 uppercase text-xs">${item.desc}</p>
                                <p class="text-[10px] text-slate-500 font-bold uppercase">TAM: ${item.tam}</p>
                            </div>
                            <span class="font-black text-indigo-900">R$ ${subtotal.toLocaleString('pt-br', {minimumFractionDigits: 2})}</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <div class="flex items-center gap-3 bg-white border rounded-xl p-1">
                                <button onclick="alterarQtd(${index}, -1)" class="w-8 h-8 flex items-center justify-center bg-slate-100 rounded-lg font-black">-</button>
                                <span class="font-black w-6 text-center text-sm">${item.qtd}</span>
                                <button onclick="alterarQtd(${index}, 1)" class="w-8 h-8 flex items-center justify-center bg-slate-100 rounded-lg font-black">+</button>
                            </div>
                            <button onclick="removerItem(${index})" class="text-red-500 text-[10px] font-black uppercase underline">Remover</button>
                        </div>
                    </div>`;
            });
            document.getElementById('totalOrcamento').textContent = `R$ ${totalGeral.toLocaleString('pt-br', {minimumFractionDigits: 2})}`;
        }

        function removerItem(index) { orcamento.splice(index, 1); atualizarCarrinho(); }
        function toggleOrcamento() { document.getElementById('orcamentoModal').classList.toggle('hidden'); }
        function limparOrcamento() { if(confirm("Zerar orÃ§amento?")) { orcamento = []; atualizarCarrinho(); } }

        function gerarPDF() {
            const element = document.getElementById('pdfArea');
            html2pdf().set({ margin: 10, filename: 'Orcamento_ACA.pdf', html2canvas: { scale: 3 } }).from(element).save();
        }

        function enviarWhatsApp() {
            let msg = "ðŸ“ *NOVO ORÃ‡AMENTO ACA*\n\n";
            orcamento.forEach(i => msg += `âœ… *${i.qtd}x* ${i.desc} (Tam: ${i.tam})\n`);
            msg += `\nðŸ’° *TOTAL: ${document.getElementById('totalOrcamento').textContent}*`;
            window.open(`https://wa.me/?text=${encodeURIComponent(msg)}`);
        }
    </script>
</body>
